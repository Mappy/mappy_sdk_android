<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_info_window"
    android:minWidth="22dp"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingTop="14dp"
    android:paddingEnd="10dp"
    android:paddingBottom="16dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/marker_sample_info_window_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:contentDescription="@null"
            tools:src="@drawable/categorie_jardinerie_bitmap" />

        <TextView
            android:id="@+id/marker_sample_info_window_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_toEndOf="@id/marker_sample_info_window_icon"
            android:textColor="#333"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="Mappy" />

        <TextView
            android:id="@+id/marker_sample_info_window_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/marker_sample_info_window_title"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@id/marker_sample_info_window_icon"
            android:lineSpacingExtra="1dp"
            android:textColor="#666"
            android:textSize="16sp"
            tools:text="Boulogne Billancourt" />
    </RelativeLayout>
</LinearLayout>
